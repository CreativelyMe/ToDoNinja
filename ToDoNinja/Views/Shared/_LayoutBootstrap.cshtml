@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>To Do Ninja - </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />      
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
      <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="@Url.Action("Index", "Home")">ToDoNinja</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("Project", "Index", "Project")</li>
                <li>@Html.ActionLink("Task", "Index", "Task")</li>
                <li>@Html.ActionLink("Resource", "Index", "Resource")</li>
                <li>@Html.ActionLink("Priority", "Index", "Priority")</li>
                <li>@Html.ActionLink("Status", "Index", "Status")</li>
                <li>@Html.ActionLink("Urgency", "Index", "Urgency")</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
        <div class="row">
            @RenderSection("featured", required: false)
        </div>
        <div class="row">
            @RenderBody()
        </div>
    </div>

<!-- Javascript -->

@section scripts {
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    
}

</body>
</html>
